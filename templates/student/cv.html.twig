{#----------------#}
{# templates/admin.html.twig #}
{#----------------#}

{% extends '_base.html.twig' %}

{% block title %}CV{% endblock %}

{# ------------------------------------------------- #}
{% block cvNavStyle %}current_page{% endblock %}

{% block main %}

    <h1>This is your CV page, you can view and edit your cv here.</h1>
    <table id = "cvTable">
        <tr>
            <td>
                    <b>Name:</b>
                </td>
                <td>
                    {{  cv.name }} {{  cv.surname }}
                </td>
                <td>
                <b>Photo</b>
            </td>
        </tr>
        <tr>
            <td>
                    <b>Age:</b>
                </td>
                <td>
                {{  cv.age }}
                </td>
                <td rowspan="4">
                <img src="/images/{{ cv.photo }}" alt="photo">
            </td>
        </tr>
        <tr>
            <td>
                    <b>Address:</b>
                </td>
                <td>
                    {{  cv.address }}
                </td>
            </tr>
        <tr>
            <td>
                    <b>Experience:</b>
                </td>
                <td>
                    {{  cv.experience }}
                </td>
            </tr>
        <tr>
            <td>
                    <b>Extra:</b>
                </td>
                <td>
                    {{  cv.extra }}
                </td>
            </tr>
    </table>

    <h1>Update your cv</h1>

<form
method="post"
action="/processCvUpdate">
<table class = "cvFormTable">
    <tr>
        <td colspan="2">
            <h2>Update Form</h2>
        </td>
    </tr>
    <tr>
        <td>
        First Name:
        </td>
        <td>
        <input type="text" name="name" >
        </td>
    </tr>
    <tr>
        <td>
        Surname:
        </td>
        <td>
        <input type="text" name="surname" >
        </td>
    </tr>
    <tr>
        <td>
        Age:
        </td>
        <td>
        <input type="text" name="age" >
        </td>
    </tr>
    <tr>
        <td>
        Address:
        </td>
        <td>
        <input type="text" name="address" >
        </td>
    </tr>
    <tr>
        <td>
        Experience:
        </td>
        <td>
        <input type="text" name="experience" >
        </td>
    </tr>
    <tr>
        <td>
        Extra:
        </td>
        <td>
        <input type="text" name="extra" >
        </td>
    </tr>
    <tr>
        <td>
            Photo:
        </td>
        <td>
        <select name="photo">
            <option value="headshot1.jpg">Headshot 1</option>
            <option value="headshot2.jpg">Headshot 2</option>
            <option value="headshot3.jpg">Headshot 3</option>
            <option value="headshot4.jpg">Headshot 4</option>
            <option value="headshot5.jpg">Headshot 5</option>
            <option value="headshot6.jpg">Headshot 6</option>
            <option value="headshot7.jpg">Headshot 7</option>
            <option value="headshot8.jpg">Headshot 8</option>
            <option value="headshot9.jpg">Headshot 9</option>
            <option value="headshot10.jpg">Headshot 10</option>
        </select>
        </td>
    </tr>
    <tr>
        <td colspan="2">
        <input type="submit" value="update">
        </td>
    </tr>
</table>
</form>

{% endblock %}