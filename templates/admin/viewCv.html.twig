{% extends '_base.html.twig' %}

{% block title %}Cv{% endblock %}

{# ------------------------------------------------- #}
{% block viewCvNavStyle %}current_page{% endblock %}

{% block main %}

    <h1>Cv</h1>

        <table id = "cvTable">
            <tr>
                <td>
                    <b>Name:</b>
                </td>
                <td>
                    {{  cv.name }} {{  cv.surname }}
                </td>
                <td>
                    <b>Photo</b>
                </td>
            </tr>
            <tr>
                <td>
                    <b>Age:</b>
                </td>
                <td>
                    {{  cvs.age }}
                </td>
                <td rowspan="4">
                    <img src="/images/{{ cv.photo }}" alt="photo">
                </td>
            </tr>
            <tr>
                <td>
                    <b>Address:</b>
                </td>
                <td>
                    {{  cv.address }}
                </td>
            </tr>
            <tr>
                <td>
                    <b>Experience:</b>
                </td>
                <td>
                    {{  cv.experience }}
                </td>
            </tr>
            <tr>
                <td>
                    <b>Extra:</b>
                </td>
                <td>
                    {{  cv.extra }}
                </td>
            </tr>
        </table>

{% endblock %}
