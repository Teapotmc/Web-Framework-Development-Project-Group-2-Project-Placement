<!doctype html>
<html lang="en">
<head>
    <title>ITB CDM {% block pageTitle %}{% endblock %}
    </title>
    <link rel="shortcut icon" href="images/brush.ico" />
    <meta charset="utf-8">
    <style>
        @import "css/basic.css";
        @import "css/nav.css";
        @import "css/footer.css";
    </style>
</head>
<body>

<header>
    <img src="images/logo.png" alt="logo">

    <section>
        <div id="loginUser">
        {% if Username %}
            You are logged in as: <i>{{ Username }}</i>
            <br>
            <a href="/logout">Logout</a>
        {% else %}
            You are not logged in
            <br>
            <a href="/login">Login</a>
           <b>/</b>
            <a href="/register">Register</a>
        {% endif %}
            </div>
    </section>
</header>

<nav>
    <ul>
        <li>
            <a href="/" class="{% block indexNavStyle %}{% endblock %}">Home</a>
        </li>
        <li>
            <a href="/about" class="{% block aboutNavStyle %}{% endblock %}">About</a>
        </li>

        {% if role == 1 %}
            {% include 'student/_studentLinks.html.twig'  %}
        {% elseif role == 2%}
            {% include 'admin/_adminLinks.html.twig'  %}
        {% elseif role == 3%}
            {% include 'employer/_employerLinks.html.twig'  %}
        {% else%}
        {% endif %}

    </ul>

</nav>

<div id ="main">
{% block main %}
{% endblock %}
</div>


<footer>
    2016 &copy; Institute of Technology Blanchardstown
</footer>

</body>
</html>