{% extends '_base.html.twig' %}

{% block title %}Private Message{% endblock %}

{# ------------------------------------------------- #}
{% block ePrivateMessageNavStyle %}current_page{% endblock %}

{% block main %}

    <h1>Private Message Form</h1>
    <h2>Here you can send a private Message to the Admin</h2>

    <form
            method="post"
            action="/eProcessPrivate">
        <table class = "cvFormTable">
            <tr>
                <td colspan="2">
                </td>
            </tr>
            <tr>
                <td>
                    Username:
                </td>
                <td>
                    <input type="text" name="subject" value="admin" readonly >
                </td>
            </tr>
            <tr>
                <td>
                    Subject:
                </td>
                <td>
                    <input type="text" name="subject" >
                </td>
            </tr>
            <tr>
                <td>
                    Message:
                </td>
                <td>
                    <textarea name="content" placeholder="Enter message here..." cols="21" rows ="10"></textarea>
                </td>
            </tr>
            <tr>
                <td>
                    Comment:
                </td>
                <td>
                    <textarea name="comment" placeholder="Enter comment here" cols="21" rows ="10"></textarea>
                </td>
            </tr>
            </tr>
            <tr>
                <td>

                </td>
                <td colspan="2">
                    <input type="submit" value="send">
                </td>
            </tr>
        </table>
    </form>

    <h2>Admin Messages</h2>

    <br>

    {% for message in messages %}
        <table id ="generalTable">
            <tr>
                <td id="generalId">
                    ID: {{ message.id }}
                </td>
            </tr>
            <tr>
                <td>
                    To: {{ message.username }}
                </td>
            </tr>
            <tr>
                <td>
                    Subject: {{ message.subject }}
                </td>
            </tr>
            <tr>
                <td>
                    Content:
                    <p>
                        {{ message.content }}
                    </p>
                </td>
            </tr>
            <tr>
                <td>
                    Comment:
                    <p>
                        {{ message.comment }}
                    </p>
                </td>
            </tr>
            <tr>
                <td colspan="3">
                    <a href="/viewPrivate&{{  message.id }}">View</a>
                </td>
            </tr>
        </table>
        <p>

        </p>
    {% endfor %}

{% endblock %}