{% extends '_base.html.twig' %}

{% block title %}Download Cv{% endblock %}

{# ------------------------------------------------- #}
{% block downloadNavStyle %}current_page{% endblock %}

{% block main %}

    <h1>Cvs</h1>

{% for cv in cvs %}
<table id = "cvTable">
    <tr>
        <td>
            <b>Name:</b>
        </td>
        <td>
            {{  cv.name }} {{  cv.surname }}
        </td>
        <td>
            <b>Photo</b>
        </td>
    </tr>
    <tr>
        <td>
            <b>Age:</b>
        </td>
        <td>
            {{  cv.age }}
        </td>
        <td rowspan="4">
            <img src="/images/{{ cv.photo }}" alt="photo">
        </td>
    </tr>
    <tr>
        <td>
            <b>Address:</b>
        </td>
        <td>
            {{  cv.address }}
        </td>
    </tr>
    <tr>
        <td>
            <b>Experience:</b>
        </td>
        <td>
            {{  cv.experience }}
        </td>
    </tr>
    <tr>
        <td>
            <b>Extra:</b>
        </td>
        <td>
            {{  cv.extra }}
        </td>
    </tr>
</table>
<p>

</p>

{% endfor %}

{% endblock %}
